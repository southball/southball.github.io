---
import "./reset.min.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <slot name="head" />
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  html {
    font-family:
      system-ui,
      -apple-system,
      "Hiragino Sans",
      "Yu Gothic UI",
      "Segoe UI",
      "Meiryo",
      sans-serif;
  }
</style>
